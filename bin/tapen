#!/usr/bin/env node

//// MODULES //////////////////////////////////////////////////////////////////

var resolveModule = require('resolve').sync;
var resolvePath = require('path').resolve;
var parseOpts = require('minimist');
var glob = require('glob');

//// CONFIGURATION ////////////////////////////////////////////////////////////

var opts = parseOpts(process.argv.slice(2), {
        alias: { r: 'require', n: 'onlyTestNumber' },
        string: 'require',
        boolean: 'n',
        default: { r: [], n: false }
    });

if (opts.onlyTestNumber === true) {
    exitWithError("-n option requires a test number (e.g. -n42)");
}

var cwd = process.cwd();

if (typeof opts.require === 'string') {
    opts.require = [opts.require];
}

opts.require.forEach(function(module) {
    if (module) {
      /* This check ensures we ignore `-r ""`, trailing `-r`, or
       * other silly things the user might (inadvertently) be doing. */
      require(resolveModule(module, { basedir: cwd }));
    }
});

//// INSTALLATION /////////////////////////////////////////////////////////////

// TBD: should be able to use just resolveModule() after separating tapen
var tape;
try {
    tape = require(resolveModule("tape", { basedir: cwd }));
}
catch(err) {
    tape = require("../"); // assume testing tape module itself
}

//// RUN TESTS ////////////////////////////////////////////////////////////////

opts._.forEach(function (arg) {
    glob(arg, function (err, files) {
        files.forEach(function (file) {
            require(resolvePath(cwd, file));
        });
    });
});

//// SUPPORT FUNCTIONS ////////////////////////////////////////////////////////

exitWithError(message) {
    // should only call this method prior to running any tests
    console.log("*** %s ***\n", message);
    process.exit(1);
}

// vim: ft=javascript
